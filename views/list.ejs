<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">
    <%const arr = Array.from(newListItems)%>
    <% arr.forEach((i)=>{ %>
      <form action="/delete" method="post">
        <div class="item">
          <input value="<%=i._id%>" name="Checkbox" type="checkbox" onChange="this.form.submit()">
          <p><%=  i.name  %></p>
        </div>
      </form>
    <% }) %>

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list">+</button>
      </form>
  </div>

<%- include("footer") -%>
